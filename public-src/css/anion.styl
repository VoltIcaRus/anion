// http://www.google.com/fonts/earlyaccess
// @import url('//fonts.googleapis.com/earlyaccess/nanumgothic.css');

$app-width = 500px
$text-color1 = #222
$text-color2 = #666
$text-color3 = #f6f6f6
// http://flatuicolors.com/
$blue1 = #3498db
$blue2 = #2980b9
$black1 = #34495e
$black2 = #2c3e50
$sunflower = #f1c40f

user-select(a)
  user-select a
  -moz-user-select a
  -webkit-user-select a

light-shadow()
  background-color #fff
  box-shadow 0 2px 4px 0 rgba(160, 160, 160, .8)

*, *:before, *:after
  box-sizing border-box

body
  overflow-x hidden
  overflow-y scroll
  min-width 320px
  font-size 12pt
  color #222
  background-color #e2e2e2
  margin-top 80px

body, body *
  font-family '나눔고딕', 'nanumgothic', '맑은 고딕', 'malgun gothic', sans-serif

a
  color $blue1
  text-decoration none
  cursor pointer
  img
    border 0

hr
  border 0
  border-top 1px
  border-style solid

.ellipsis
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.hidden
  display none

.vhidden
  visibility hidden

::selection
  background-color #cdf

::-moz-selection
  background-color #cdf

.titlebar, .menuwrapper, main, footer
  margin 0 auto

.titlewrap
  position fixed
  top 0
  left 0
  right 0
  user-select none

.titleinwrap
  margin 0 auto
  max-width $app-width
  box-shadow 0 2px 2px rgba(60, 60, 60, .3)

.titlebar
  display table
  background-color $black1
  cursor pointer
  .title
    display table-cell
    width 100%
    text-align center
    color #fff
    font-size 16pt
    font-weight bold
    a
      color #fff
  .button
    display table-cell
    border 0
    padding 10px 20px
    width 50px
    color #fff
    font-size 16pt
  &:hover
    background-color lighten($black1, 5%)


main, footer
  display block
  max-width $app-width

footer
  padding 10px
  margin-top 10px
  margin-bottom 10px
  text-align center
  font-size 9pt
  line-height 150%
  color $text-color2
  light-shadow()
  noscript.warning
    display block
    margin 10px
    padding 10px
    border 1px solid #996
    border-radius 5px
    background-color #ffc
    color #663

#loading
  position fixed
  top 50%
  left 50%
  margin-top -50px
  margin-left -50px
  height 100px
  width 100px
  img
    width 100px
    height 100px

.menuwrapper
  background-color $black2
  .divider
    width 90%
    color #ccc
  #menu
    overflow hidden
    hr.divider
      width 90%
      margin 3px auto
      color lighten($black1, 10%)
    .menu-item:hover
      background-color lighten($black1, 5%)
    .menu-main
      .menu-item
        display block
        padding 7px 20px
        font-size 12pt
        color #fff
        &:after
          content '>'
          float right
          font-size 10pt
    .menu-anilist-more
      display table
      width 90%
      margin auto
      .menu-item
        display table-cell
        width 33.333%
        padding 7px 5px
        text-align center
        color #fff
        white-space nowrap
        &.highlight
          border-bottom 3px solid $blue1
          font-weight bold
    #ani-genres-select
      display block
      width 90%
      margin 5px auto
      padding 5px
      border 2px solid lighten($black1, 10%)
      border-radius 3px
      background-color $black2
      color #fff
      -webkit-appearance none
    .search-outer
      padding 3px 0
      background-image -webkit-linear-gradient(top, $black1 0%, $black2 100%)
      background-image linear-gradient(to bottom, $black1 0%, $black2 100%)
    #search
    text-align center
      #searchform
        width 90%
        padding 1px
        overflow hidden
        margin 5px auto
        display table
        border 2px solid lighten($black1, 10%)
        border-radius 3px
        background-color $black2
        input, button
          padding 5px
          color #fff
          user-select text
          border 0
          background-color transparent
        .query, .submit
          display table-cell
        .query
          width 95%
          input
            width 100%
            &:focus
              outline 0
        .submit
          text-align right
          width 5%
          button
            font-size 14pt
            padding 0 10px
            color #fff

.weekdaybar
  display table
  width 100%
  a.weekday
    display table-cell
    text-align center
    margin 0
    padding 7px 5px
    color #fff
    border-bottom-width 3px
    border-bottom-style solid
    &.highlight
      border-bottom-color $blue1
      font-weight bold
    &:not(.highlight)
      border-bottom-color $black2
    &:hover
      background-color $black1
      &:not(.highlight)
        border-bottom-color $black1

#ani-list
  width 100%
  .item
    display block
    light-shadow()
    transition .3s margin ease
    &:not(:first-of-type)
      border-top 1px solid #eee
    .basic
      display block
      padding 10px 25px
      .title
        @extend .ellipsis
        font-size medium
        line-height 150%
        color $text-color1
      .info
        font-size 9pt
        line-height 150%
        color $text-color2
        .state
          font-weight bold
          color $green2
        .weekday
          display inline-block
          border 1px solid #ccc
          border-radius 3px
          padding 0 5px
      .match
        background-color #cbf
        font-weight bold
        color $black2
      &.notice, &.comingsoon
        padding 10px 25px 10px 21px
      &.notice
        border-left 4px solid $blue1
        font-weight bold
      &.comingsoon
        border-left 4px solid $sunflower
      &:hover
        background-color #f6f6f6
    &.expanded
      margin 10px 0
    .extra
      padding 10px 0
      border-top 2px dashed #eee
      .captions
        padding 0 20px
        .caption
          padding-left 5px
          padding-right 5px
      .go-detail
        padding 5px 25px
        text-align center
      .group-name
        margin 0 20px
        padding 5px 0
        border-bottom 2px solid #eee
        color $text-color2
        font-size 10pt
  .no-result
    text-align center
    padding 10px 20px
    color $text-color1
    light-shadow()


#pages
  padding 5px 10px
  text-align center
  light-shadow()
  .page
    display inline-block
    padding 5px 10px
    margin 5px
    border 1px solid #ddd
    color $text-color1
    &.highlight
      font-weight bold
    &:hover
      background-color #f6f6f6
  &:empty
    display none

// --- ani detail ---
#ani-detail
  light-shadow()
  &.notice
    .header
      border-top 4px solid $blue1
  &.comingsoon
    .header
      border-top 4px solid $sunflower
  hr
    border-color #ddd
  .loadmsg
    padding 10px
    text-align center
    font-size 12pt
  .header
    padding 10px 0
    border-bottom 1px solid #eee
    .title
      margin 10px 20px
      .text
        font-size 18pt
        font-weight bold
        color $text-color1
      .state
        margin 5px
        font-size 12pt
        color $text-color2
    .info
      display table
      width 100%
      padding 0 20px
      .text, .imagecell
        display table-cell
      .text
        width 80%
        font-size 12pt
        color $text-color2
        .row
          padding 10px 0
          &:not(:first-of-type)
            border-top 1px solid #eee
          .label
            font-size 10pt
            float left
          .value
            text-align right
      .favicon
        vertical-align middle
      .imagecell
        .image
          vertical-align top
          margin-left 20px
          padding 5px
          outline 1px solid #ccc
      @media screen and (max-width 500px)
        .text, .imagecell
          display block
          width 100%
        .imagecell
          text-align center
        .image
          margin-left 0
  .content
    margin 5px 20px
    padding 10px 0
    .group-name
      padding 5px 0 3px
      border-bottom 2px solid #eee
      color $text-color2
      font-size 10pt
    .links
      .link
        display block
        padding 15px 5px
        color $text-color1
        &:not(:first-of-type)
          border-top 1px solid #eee
        &:hover
          background-color #f6f6f6
        &:after
          font-family 'FontAwesome'
          content '\f105'
          float right
          font-size 14pt
          color $text-color2
    .share
      padding 20px
.bottom-notice
  border-top 1px dashed #ccc
  border-bottom 1px dashed #ccc
  margin 5px 20px
  padding 10px 0
  font-size 10pt

.captions
  width 100%
  .caption
    display block
    padding 10px 5px
    &:not(:first-of-type)
      border-top 1px solid #eee
    .left
      float left
    .right
      float right
    .forpadding
      padding 10px 0
    .episode
      color $text-color1
    .name
      margin 0 10px
      color $text-color1
    .updateat
      font-size 10pt
      color $text-color2
    &:hover
      background-color #f6f6f6
    &.no-url
      cursor not-allowed
      .episode, .name
        text-decoration line-through
        color lighten($text-color2, 5%)

#ani-list
  .notfound, .caps-loading
    padding 10px
    text-align center

#ani-detail
  .notfound, .caps-loading
    padding 10px
    text-align center
    font-size 10pt

// from http://projects.lukehaas.me/css-loaders/
.loader:before,
.loader:after,
.loader
  border-radius 50%
  width 2.5em
  height 2.5em
  -webkit-animation-fill-mode both
  animation-fill-mode both
  -webkit-animation load7 1.8s infinite ease-in-out
  animation load7 1.8s infinite ease-in-out

.loader
  font-size 10px
  margin 80px auto
  position relative
  text-indent -9999em
  -webkit-transform translateZ(0)
  -ms-transform translateZ(0)
  transform translateZ(0)
  -webkit-animation-delay -0.16s
  animation-delay -0.16s

.loader:before
  left -3.5em
  -webkit-animation-delay -0.32s
  animation-delay -0.32s

.loader:after
  left 3.5em

.loader:before,
.loader:after
  content ''
  position absolute
  top 0

@keyframes load7
  0%, 80%, 100%
    box-shadow 0 2.5em 0 -1.3em $blue1
  40%
    box-shadow 0 2.5em 0 0 $blue1
@keyframes load7
  0%, 80%, 100%
    box-shadow 0 2.5em 0 -1.3em $blue1
  40%
    box-shadow 0 2.5em 0 0 $blue1
