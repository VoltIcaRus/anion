$app-width = 480px
$text-color1 = #333
$text-color2 = #777
$text-color3 = #f6f6f6
// http://flatuicolors.com/
$green1 = #2ecc71
$green2 = #27ae60
$blue1 = #3498db
$blue2 = #2980b9
$black1 = #34495e
$black2 = #2c3e50

user-select(a)
	user-select a
	-moz-user-select a
	-webkit-user-select a

*, *:before, *:after
	box-sizing border-box

body
	overflow-x hidden
	overflow-y scroll
	min-width 320px
	font-size 12pt
	color #222
	background-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAAMCAMAAABP7o1HAAAACVBMVEXx8fHv7+/y8vLz1QQmAAAAO0lEQVR42nWPAQoAIAgD1f8/OqlDiMPBYKk7KFoZ9fmpGOQc3FmLh5oEN80nm082H5uPzcfi01x/vi4OcRwAu6bHHywAAAAASUVORK5CYII=");
	margin-top 90px

body, body *
	font-family '나눔고딕', 'nanumgothic', '맑은 고딕', 'malgun gothic', sans-serif

.wf-active
	body, body *
		font-family 'Nanum Gothic', '나눔고딕', 'nanumgothic', '맑은 고딕', 'malgun gothic', sans-serif

a
	text-decoration none
	cursor pointer
	img
		border 0

a, a:visited
	color $green1

hr
	border 0
	border-top 1px
	border-style solid

.ellipsis
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.hidden
	display none

::selection
	background-color #ffa
::-moz-selection
	background-color #ffa

.titlebar, .menuwrapper, main, footer
	margin 0 auto

.titlewrap
	position fixed
	top 0
	left 0
	right 0
	user-select none

//.titlebar, .menuwrapper
.titleinwrap
	// width 100%
	margin 0 auto
	max-width $app-width
	box-shadow 0 2px 2px rgba(60, 60, 60, .3)

.titlebar
	background-color $black1
	// border-bottom 1px solid $green1
	display table
	.title
		display table-cell
		width 100%
		min-width 100px
		text-align center
		color #fff
		font-size 14pt
		font-weight bold
		a
			color inherit
	.button
		display table-cell
		border 0
		padding 10px 15px
		width 50px
		&:hover
			background-color lighten($black1, 5%)

main, footer
	max-width $app-width
	background-color #fff
	box-shadow 0 2px 3px 0 #ccc

main
	padding 5px 0

footer
	padding 0 10px
	text-align center
	font-size 9pt
	color $text-color2
	noscript.warning
		display block
		margin 10px
		padding 10px
		border 1px solid #996
		border-radius 5px
		background-color #ffc
		color #663


.menuwrapper
	// padding-top 5px
	background-color $black2
	.divider
		width 90%
		color #ccc
	#menu
		overflow hidden
		.divider
			width 90%
			color $black1
		#mainmenu
			.item
				display block
				padding 5px 20px
				font-size 12pt
				color $text-color3
				&:hover
					background-color lighten($black1, 5%)
				&:after
					content '>'
					float right
					font-size 10pt
		#today
			text-align center
			.date
				font-size 10pt
				color $text-color3
		#search
		text-align center
			#searchform
				width 95%
				padding 1px
				overflow hidden
				margin 10px auto
				display table
				border 1px solid lighten($black1, 5%)
				.innerwrap
					display table-row
					input
						padding 5px
						color $text-color3
						user-select text
						border 0
						background-color inherit
					.query, .submit
						display table-cell
					.query
						width 85%
						input
							width 100%
							&:focus
								outline 0
					.submit
						width 15%
						input
							width 100%
							font-size 10pt
							border-left 1px solid lighten($black1, 5%)

.weekdaybar
	display table
	width 100%
	a
		display table-cell
		text-align center
		margin 0
		padding 5px
		color $text-color3
		&.highlight
			border-bottom 3px solid $green2
			font-weight bold
			color $text-color3
		&:not(.highlight)
			border-bottom 3px solid $black1
		&:hover
			background-color lighten($black1, 5%)
	.divider
		width 1px
		height 12px
		background-color lighten($black1, 5%)

#ani-list
	width 100%
	.item
		display block
		padding 10px 20px
		background-color #fff
		border-top 1px solid #ddd
		&:first-of-type
			border-top 0
		&:hover
			background-color #f6f6f6
		.title
			@extend .ellipsis
			font-size medium
			line-height 150%
			color $text-color1
		.info
			font-size 9pt
			line-height 150%
			color $text-color2
			.state
				font-weight bold
				color $green2
			.weekday
				display inline-block
				// margin-right .5em
				border 1px solid #ccc
				border-radius 3px
				padding 0 5px
	.no-result
		text-align center
		padding 10px 20px
		color $text-color1


#pages
	border-top 1px solid #ddd
	padding 0
	text-align center
	.page
		display inline-block
		padding 3px 10px
		margin 5px
		border 1px solid #ddd
		color $text-color1
		&.highlight
			font-weight bold
		&:hover
			background-color #f6f6f6
	&:empty
		display none